<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:background="@drawable/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="lv.digitalteam.android.gatavogudri.MainActivity">

    <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true" android:id="@+id/imageView" android:layout_marginTop="20dp"
            android:layout_height="80dp" android:layout_width="80dp"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true" android:id="@+id/menuListView" android:layout_marginTop="15dp"/>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9573430590084189/4285461315">
    </com.google.android.gms.ads.AdView>

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" android:id="@+id/textView" android:textColor="#000000"
            android:textSize="18sp" android:textStyle="normal|bold" android:textAllCaps="true"
            android:layout_marginTop="5dp"/>

</RelativeLayout>
