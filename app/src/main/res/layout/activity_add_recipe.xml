<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        tools:context="lv.digitalteam.android.gatavogudri.AddRecipeActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:layout_height="50dp" android:id="@+id/downMenuRecipes">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_done_white_48dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/addRecipes"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_return_white_48dp"
                android:layout_alignParentStart="true"
                android:id="@+id/backRecipes"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_share_white_48dp"
                android:id="@+id/shareRecipes"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/backRecipes"
                android:layout_marginLeft="50dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_delete_white_48dp"
                android:id="@+id/deleteRecipes" android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/addRecipes" android:layout_marginRight="50dp"/>

    </RelativeLayout>

    <EditText
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:ems="10"
            android:background="@drawable/converter_border"
            android:maxLength="35"
            android:id="@+id/addRecipeTitle"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:hint="What's your recipe called?" android:textColor="#000000" android:textAllCaps="true"
            android:textSize="24sp" android:layout_marginTop="15dp" android:layout_width="340dp"/>
    <EditText
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:background="@drawable/converter_border"
            android:maxLength="100"
            android:layout_below="@+id/addRecipeTitle" android:layout_centerHorizontal="true"
            android:id="@+id/addRecipeDesc" android:hint="Write a short description!" android:textColor="#000000"
            android:layout_marginTop="15dp" android:layout_width="340dp"/>
    <EditText
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/converter_border"
            android:ems="10"
            android:layout_below="@+id/addRecipeDesc" android:layout_centerHorizontal="true"
            android:id="@+id/addRecipeIngr" android:hint="Ingredients"
            android:textColor="#000000" android:layout_marginTop="15dp" android:layout_width="340dp"/>
    <EditText
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/converter_border"
            android:ems="10"
            android:layout_below="@+id/addRecipeIngr" android:layout_centerHorizontal="true"
            android:id="@+id/addRecipePrep" android:hint="Preparation" android:layout_marginTop="15dp"
            android:layout_width="340dp"/>
    <ImageView
            app:srcCompat="@drawable/ic_perm_media_black_36dp"
            android:id="@+id/addRecipeImage"
            android:layout_marginLeft="60dp"
            android:layout_width="70dp" android:layout_height="70dp" android:layout_below="@+id/addRecipePrep"
            android:layout_alignStart="@+id/addRecipePrep" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Click to add \n an picture!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addRecipeAddImg" android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/addRecipeImage" android:layout_toEndOf="@+id/addRecipeImage"
            android:layout_marginTop="10dp"/>


</RelativeLayout>
