<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="@drawable/recipes_border"
              android:layout_height="match_parent">

    <ImageView
            app:srcCompat="@drawable/ic_cake_black_24dp"
            android:id="@+id/recipesImage" android:layout_width="150dp" android:layout_height="150dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/recipesImage" android:id="@+id/recipesTitle" android:textStyle="normal|bold"
            android:textAllCaps="true" android:textColor="#000000" android:textAlignment="center"
            android:textSize="18sp" android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/recipesTitle"
            android:layout_toEndOf="@+id/recipesImage" android:id="@+id/recipesDesc" android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
</RelativeLayout>